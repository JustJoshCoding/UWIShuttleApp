<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/student"
        android:layout_width="252dp"
        android:layout_height="210dp"
        android:layout_marginTop="20dp"
        android:onClick="DriverFunction"
        android:src="@drawable/studenticon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeInfo"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/driver"
        android:layout_width="264dp"
        android:layout_height="174dp"
        android:src="@drawable/drivericon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/student"
        app:layout_constraintStart_toStartOf="@+id/student"
        app:layout_constraintTop_toBottomOf="@+id/student"
        app:layout_constraintVertical_bias="0.165"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/welcomeInfo"
        android:layout_width="221dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:text="Welcome to UWI Shuttle App"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
